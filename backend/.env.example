# ============================================================
# PENS Chatbot - Environment Variables
# Salin file ini ke .env dan isi nilainya
# JANGAN commit .env ke git!
# ============================================================

# Server
PORT=3000
NODE_ENV=development

# CORS - origin yang diizinkan (pisahkan dengan koma jika lebih dari satu)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Google Gemini API
# Dapatkan API key gratis di: https://aistudio.google.com/apikey
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE
GEMINI_MODEL=gemini-1.5-flash

# ChromaDB
CHROMA_URL=http://localhost:8000
CHROMA_COLLECTION=pens_docs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=10

# Cache TTL (dalam milidetik, default 60 menit)
CACHE_TTL_MS=3600000

# Logging
LOG_LEVEL=info

# Kontak fallback PENS (tampil jika LLM tidak tahu jawaban)
PENS_CONTACT=https://www.pens.ac.id atau hubungi (031) 5947280
